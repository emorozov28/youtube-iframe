{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext", // Переконайтеся, що тут NodeNext
    "moduleResolution": "NodeNext", // І тут також
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
