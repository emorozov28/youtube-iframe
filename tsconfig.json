{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "src/declarations.d.ts"],
    "exclude": ["node_modules"]
}
